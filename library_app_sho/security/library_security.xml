<odoo>
    <record id="module_library_category_sho" model="ir.module.category">
        <field name="name">Library SHO</field>
    </record>

    <record id="Library_group_user_sho" model="res.groups">
        <field name="name">User</field>
        <field name="category_id"
               ref="module_library_category_sho" />
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="Library_group_manager_sho" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
               ref="module_library_category_sho" />
        <field name="implied_ids"
               eval="[(4, ref('Library_group_user_sho'))]" />
    </record>
</odoo>
