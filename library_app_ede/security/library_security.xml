<?xml version="1.0" ?>
<odoo>
  <record id="module_library_category" model="ir.module.category">
    <field name="name">Library_ede</field>
  </record>

  <!-- Library User Group -->
  <record id="library_group_user" model="res.groups">
    <field name="name">User</field>
    <field name="category_id"
           ref="module_library_category"/>
    <field name="implied_ids"
           eval="[(4, ref('base.group_user'))]"/>
  </record>

  <!-- Library Manager Group -->
  <record id="library_group_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="category_id"
           ref="module_library_category"/>
    <field name="implied_ids"
           eval="[(4, ref('library_group_user'))]"/>
  </record>

  <record id="book_user_rule" model="ir.rule">
    <field name="name">User enregistrements actifs uniquement</field>
    <field name="model_id" ref="model_library_book_ede"/>
    <field name="domain_force">
      [('active','=',True)]
    </field>
    <field name="active">True</field>
    <field name="groups" eval="[(4,ref('Library_group_user'))]"/>
  </record>

  <record id="book_user_rule2" model="ir.rule">
    <field name="name">User permissions sur enregistrments inactifs</field>
    <field name="model_id" ref="model_library_book_ede"/>
    <field name="domain_force">
      [('active','=',False)]
    </field>
    <field name="perm-read">True</field>
    <field name="perm-create">False</field>
    <field name="perm-write">False</field>
    <field name="perm-unlink">False</field>
    <field name="groups" eval="[(4,ref('Library_group_user'))]"/>
  </record>



</odoo>