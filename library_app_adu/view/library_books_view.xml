<?xml version="1.0"?>
<odoo>
    <record id="view_form_book" model="ir.ui.view">
        <field name="name">Book form</field>
        <field name="model">library.book.adu</field>
        <field name="arch" type="xml">
            <form string="Book">
                <header>
                    <button name="button_check_isbn" type="object" string="Check ISBN" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="author_ids" widget="many2many_tags" />
                        <field name="publisher_id" />
                        <field name="isbn" />
                        <field name="image" widget="image" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_book" model="ir.ui.view">
        <field name="name">Book List</field>
        <field name="model">library.book.adu</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="author_ids" widget="many2many_tags" />
                <field name="publisher_id" />
                <field name="date_published" />
            </tree>
        </field>
    </record>

    <record id="view_search_book" model="ir.ui.view">
        <field name="name">Book Filter</field>
        <field name="model">library.book.adu</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="author_ids" widget="many2many_tags" />
                <field name="publisher_id" />
                <field name="date_published" />
                <filter name="filter_active"
                        string="Active"
                        domain="[('active','=',True)]" />
                <filter name="filter_inactive"
                        string="Inactive"
                        domain="[('active','=',False)]" />
                <group>
                    <filter string="Publisher" name="group_by_publisher" context="{'group_by':'publisher_id'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>